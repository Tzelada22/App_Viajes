<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".destinos">
    <!-- Scroll permitira que se pueda deslizar la pantalla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        tools:context=".DestinosActivity">
        <!-- "Contenedor 1" que ayuda con la organizacion de todos los elementos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destinos Populares"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#263238"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- "Contenedor 2", ayudara con la organización del primer destino -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paris" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="París, Francia"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La 'Ciudad de la Luz' es un centro de arte, moda, gastronomía y cultura."
                    android:textSize="14sp"
                    android:textColor="#424242"/>

            </LinearLayout>

            <!-- "Contenedor 3", ayudara con la organización del segundo destino -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tokio" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tokio, Japón"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Una fascinante metrópolis donde la tradición y la tecnología coexisten."
                    android:textSize="14sp"
                    android:textColor="#424242"/>

            </LinearLayout>

            <!-- "Contenedor 4", ayudara con la organización del tercer destino -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_background"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/machu_pichu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Machu Picchu, Perú"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antigua ciudad inca que se eleva sobre la Cordillera de los Andes."
                    android:textSize="14sp"
                    android:textColor="#424242"/>

            </LinearLayout>
            <!-- "Contenedor 5", ayudara con la organización del cuarto destino -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_background"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coliseo_romano" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coliseo Romano, Italia"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gran Anfiteatro de la Antigua Roma que se alza en la ciudad de Roma."
                    android:textSize="14sp"
                    android:textColor="#424242"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>